      {{!-- JS for clock --}}
      var div = document.getElementById('curr_time');
      function time() {
        div.innerHTML = "";
        var d = new Date();
        var s = d.getSeconds();
        var m = d.getMinutes();
        var h = d.getHours();

        h = (h < 10) ? "0" + h : h;
        m = (m < 10) ? "0" + m : m;
        s = (s < 10) ? "0" + s : s;

        div.innerHTML = h + ":" + m + ":" + s;
      }

      setInterval(time, 1000);
      </script>


